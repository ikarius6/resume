---
import Icon from 'astro-icon'
import type { TechnologyType } from "@/lib/data"

interface Props {
  technology: TechnologyType
}

const { technology } = Astro.props
const { name, icon, experience } = technology
---

<li class="transform h-24 w-24 sm:h-24 sm:w-24 shadow-xl transition duration-300 hover:scale-105">
  <a title={name} data-popover-target={'popover-' + name} data-popover-trigger="hover" class="flex justify-center items-center w-24 h-24" href="#"><Icon class="w-24" name={icon} /></a>
  <div data-popover id={'popover-' + name} role="tooltip" class="absolute z-10 invisible inline-block w-auto text-lg text-zinc-200 transition-opacity duration-300 bg-black p-2 border rounded-lg shadow-sm opacity-0">
      {name}<br/>{experience}
  </div>
</li>