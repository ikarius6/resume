---
import AsideMenu from '@/components/AsideMenu.astro'
import Main from '@/components/Main.astro'
import Footer from '@/componets/Footer.astro'
import { ViewTransitions } from "astro:transitions"
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
	title: string;
}

const { title } = Astro.props;

// Construir la URL canónica correcta basada en el idioma actual
const currentPath = Astro.url.pathname;
const canonicalUrl = `https://alexomar.com${currentPath}`;

// URLs alternativas para hreflang
const alternateUrls = {
  es: `https://alexomar.com/es/`,
  en: `https://alexomar.com/en/`
};

const metadata = {
  author: "Alex Omar",
  url: canonicalUrl,
  description: t('about_me_1'),
  image: "https://alexomar.com/img/avatar-min.webp",
  keywords: t('keywords')
}
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ metadata.description } />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    
    <!-- SEO: URL Canónica -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- SEO: Etiquetas hreflang para idiomas alternativos -->
    <link rel="alternate" hreflang="es" href={alternateUrls.es} />
    <link rel="alternate" hreflang="en" href={alternateUrls.en} />
    <link rel="alternate" hreflang="x-default" href={alternateUrls.es} />
    
    <meta property="og:url" content={ metadata.url } />
    <meta property="og:title" content={ title } /> 
    <meta property="og:description" content={ metadata.description } /> 
    <meta property="og:image" content={ metadata.image } />
    <meta property="og:type" content="website" />

    <meta itemprop="name" content={ title } />
    <meta itemprop="description" content={ metadata.description } />
    <meta itemprop="image" content={ metadata.image } />
    
    <meta name="description" content={ metadata.description } />
    <meta name="keywords" content={ metadata.keywords } />
    <meta name="author" content={ metadata.author } />

    <ViewTransitions fallback="none" />
	</head>
	<body>
		<div id="app" class="relative h-screen gap-4 p-4">
      <aside class="[grid-area:aside] rounded-lg flex-col flex bg-zinc-900">
        <AsideMenu />
      </aside>
      <main class="[grid-area:main] rounded-lg bg-zinc-900 lg:max-w-4xl">
        <Main />
      </main>
      <footer class="[grid-area:footer] text-zinc-200 pb-4 text-center lg:max-w-4xl">
        <Footer />
      </footer>
		</div>
    <script async is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
    <script is:inline src="/js/konami.js"></script>
    <script is:inline>
      new Konami(function() { alert('The cake is a lie!')});
      // TODO: Analytics
    </script>
  </body>
</html>
<style>
	#app {
		display: grid;
    grid-template-areas: 
      "aside main main"
      "aside footer footer";
    grid-template-columns: 28rem 1fr;
    grid-template-rows: 1fr;
	}

  @media (max-width: 1023px) {
    #app {
      grid-template-areas: 
        "aside"
        "main"
        "footer";
        grid-template-columns: 1fr;
        grid-template-rows: 26rem 1fr;
    }
  }
</style>
<style is:global>
	html {
		font-family: arial, sans-serif;
    font-size: 16px;
		background: #000;
	}
</style>
